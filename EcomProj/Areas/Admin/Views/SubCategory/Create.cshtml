@using EcomProj.Model


@model SubCategory

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create SubCategory</h2>
        <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" /> 
            <span asp-validation-for="Name" class="text-danger"></span> <!-- for name validation bcoz cant be empty-->
        </div>    
        
        
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="5">

            </textarea>
       

            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="SubCategory" asp-action="Index" class="btn btn-secondary"  style="width:200px">
                Back to the List
            </a>


    </div>
</form>

@section Scripts{
@{
<partial name = "_ValidationScriptsPartial"></partial>
}
}