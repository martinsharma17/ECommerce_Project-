@using EcomProj.Model

@model IEnumerable<Category>

<div class="container p-3">
    <div class ="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />  


  <table class="table" style="width:100%">
      <thead>
          <tr>
              <th>
                  Category Id
              </th>       
              <th>
                  Category Name
              </th>        
              <th>
                  Created On

              </th>
              <th>

              </th>
          </tr>
      </thead>
      <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>     
                <td>
                    @obj.Name
                </td>     
                
                <td>
                    @obj.CreatedDate
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                    

                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-primary mx-2"> Delete</a>
                                        </div>   

                </td>
            </tr>
            
        }
    </tbody>

  </table>