@using EcomProj.Model
@model ShoppingCart

<form method="post">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header  text-light">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-primary text-center">@Model.Product.Name</h1>
                    </div>
                    <div class="col-md-6 text-end">
                        @*      <span class="badge bg-info">@Model.Product.Category.Name</span>
                        <span class="badge bg-warning">@Model.Product.SubCategory.Name</span>*@
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 text-center">
                            <img src="@Model.Product.Image" width="100%" class="rounded" />
                        </div>
                        <div class="col-lg-8 pt-4">
                        <div class="col-lg-4 pt-4">
                            <h5 class=" pb-2 text-primary">List Price: <strike>@Model.Product.FixedPrice.ToString("c")</strike></h5>
                            <h5 class=" pb-2 text-success">Discount Price: @Model.Product.DiscountPrice.ToString("c")</h5>
                            <h5 class=" pb-2 text-danger">In Stock: @Model.Product.Quantity</h5>
                            <h5 class=" pb-2 text-success">Category: @Model.Product.Category.Name</h5>
                            <div class="row">
                                <div><h4>Quantity</h4></div>
                                <div><input asp-for="Count" class="form-control" min="1" max="15" /></div>
                            </div>
                            @*  <div class="row pl-2">
                            <p class="text-muted">@Html.Raw(Model.Product.Description)</p>
                            </div>*@
                        </div>
                        <div class="row pl-2 pt-4">
                            <p class="">@Html.Raw(Model.Product.Description)</p>
                        </div>
                        </div>


                    </div>

                </div>
       
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-md-6 pb-1">
                        <a class="btn btn-success form-control" style="height: 50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height: 50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
