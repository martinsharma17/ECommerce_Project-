            @* @Html.Partial("Hero") *@
            <section class="hero-section">
                <div class="overlay"></div> <!-- Overlay for better readability -->
                <div class="container">
                    <div class="row align-items-center text-center text-md-start">
                        <div class="col-md-6">
                            <h1 class="animate__animated animate__fadeInDown">Discover the Latest Gadgets</h1>
                            <p class="animate__animated animate__fadeInUp">
                                Upgrade your tech game with the newest gadgets in the market.
                            </p>
                            <div class="hero-buttons">
                                <a href="/shop" class="btn btn-primary">Shop Now</a>
                                <a href="/about" class="btn btn-outline-light">Explore</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <style>
                .hero-section {
                    position: relative;
                    width: 100%;
                    height: 500px; /* Adjust as needed */
                    background-size: cover;
                    background-position: center;
                    color: white;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    text-align: center;
                    transition: background-image 2s revert-layer;
                }

                .overlay {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5); /* Dark overlay for better contrast */
                }

                .hero-section h1 {
                    font-size: 3rem;
                    font-weight: bold;
                    position: relative;
                    z-index: 2;
                }

                .hero-section p {
                    font-size: 1.2rem;
                    margin-bottom: 20px;
                    position: relative;
                    z-index: 2;
                }

                .hero-buttons .btn {
                    margin-right: 10px;
                    padding: 10px 20px;
                    font-size: 1.1rem;
                    border-radius: 25px;
                    position: relative;
                    z-index: 2;
                }
            </style>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    let images = [
                        "./images/products/gadget1.jpg",
                           "./images/products/gadget2.jpg",
                               "./images/products/gadget3.jpg",
                                   "./images/products/gadget2.jpg"
                    ];
                    let index = 0;
                    function changeBackground() {
                        document.querySelector(".hero-section").style.backgroundImage = `url('${images[index]}')`;
                        index = (index + 1) % images.length;
                    }
                    changeBackground(); // Set initial background
                    setInterval(changeBackground, 2000); // Change every 2 seconds
                });
            </script>



                  </div>
    </div>

