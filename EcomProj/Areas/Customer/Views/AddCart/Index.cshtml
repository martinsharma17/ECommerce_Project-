@model EcomProj.Model.ViewModel.ShoppingCartVM
<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-gradient ml-0 py-2">
            <div class="row px-4">
                <div class="col-12 text-center">
                    <h5 class="pt-2 text-primary">
                        Your Cart
                    </h5>
                </div>
                @*       <div class="col-md-2 offset-md-1">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm">Continue Shopping</a>
                </div>*@

            </div>
        </div>
        <div class="card-body my-4">
            @foreach (var item in Model.ListCart)
            {


                <div class="row mb-3 pb-3">
                    <div class="col-md-10 offset-md-1">
                        <div class="row border-bottom pb-3">
                            <div class="col-10 text-center py-2  d-flex justify-content-center">
                                <img src="@item.Product.Image" class="rounded" width="25%" />
                            </div>
                            <div class="col-10 pt-md-3 text-center">
                                <h5 class="text-uppercase text-primary"><strong>@item.Product.Name</strong></h5>
                                @*  <p class="description-limit">
                            <small>@Html.Raw(item.Product.Description)</small>
                            </p>*@
                            </div>

                            <div class="col-10 text-center pt-2 pt-md-4">
                                <h6 class="fw-semibold">
                                    @item.Price.ToString("c")
                                    <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                </h6>
                            </div>

                            <div class="col-10 text-center pt-2 pt-md-4 d-flex justify-content-between">
                                <div class="col-4 pt-2 ">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                        
                                    </div>

                                </div>
                                <div class="col-2 pt-2 justify-content-end ">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> Total Amount</h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12">

                    <div class="row  justify-content-end">
                        <div class="col-md-2 offset-md-5 d-flex">
                            <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
